{
    "name": "denis/articulate",
    "description": "A business-oriented PHP ORM library",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Articulate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Articulate\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "denis",
            "email": "denisalitb@rambler.ru"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "vlucas/phpdotenv": "^5.6",
        "friendsofphp/php-cs-fixer": "^3.62",
        "squizlabs/php_codesniffer": "^3.10",
        "infection/infection": "dev-master"
    },
    "require": {
        "symfony/console": "^8.0"
    },
    "scripts": {
        "cs:check": "php-cs-fixer fix --dry-run --diff --allow-risky=yes",
        "cs:fix": "php-cs-fixer fix --allow-risky=yes",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html=build/coverage --coverage-clover=build/coverage.xml",
        "test:mutation": "infection --threads=max",
        "test:mutation:full": "infection --threads=max --with-uncovered",
        "qa": [
            "@cs:check",
            "@test",
            "@test:mutation"
        ]
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
