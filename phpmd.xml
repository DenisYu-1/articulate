<?xml version="1.0"?>
<ruleset name="Articulate Rules"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                      http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">

    <description>PHP Mess Detector ruleset for Articulate</description>

    <!-- Cyclomatic Complexity Rule -->
    <rule ref="rulesets/codesize.xml/CyclomaticComplexity">
        <properties>
            <!-- Maximum allowed complexity -->
            <property name="reportLevel" value="10"/>
            <!-- Show complexity for all methods, not just violations -->
            <property name="showClassesComplexity" value="true"/>
            <!-- Show complexity for all methods, not just violations -->
            <property name="showMethodsComplexity" value="true"/>
        </properties>
    </rule>

    <!-- NPath Complexity Rule -->
    <rule ref="rulesets/codesize.xml/NPathComplexity">
        <properties>
            <property name="minimum" value="200"/>
        </properties>
    </rule>

    <!-- Method Length Rule -->
    <rule ref="rulesets/codesize.xml/ExcessiveMethodLength">
        <properties>
            <property name="minimum" value="100"/>
        </properties>
    </rule>

    <!-- Class Length Rule -->
    <rule ref="rulesets/codesize.xml/ExcessiveClassLength">
        <properties>
            <property name="minimum" value="1000"/>
        </properties>
    </rule>

    <!-- Exclude test files from complexity checks -->
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
</ruleset>
